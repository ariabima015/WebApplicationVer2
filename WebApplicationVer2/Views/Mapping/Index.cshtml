@model IEnumerable<WebApplicationVer2.ViewModels.Mapping>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Group)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Warehouse)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.City.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Group.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Warehouse.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Warehouse.WarehouseId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Warehouse.WarehouseId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Warehouse.WarehouseId">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
